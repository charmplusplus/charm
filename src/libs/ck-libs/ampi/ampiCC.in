#!/bin/sh
CHARMBIN=`dirname $0`

while [ ! $# -eq 0 ]
do
  arg="$1"
  case "$arg" in
  -show)
     echo "charmc"
     exit 0
     ;;
  *) break
     ;;
  esac
  shift
done

# replaced by configure
arch=@base_version@

CharmArch()
{
if test x$arch = x
then
  echo "Unknown Charm architecture!"
  exit 1
elif `echo $arch | grep 'mpi-' > /dev/null 2>&1`
then
  charmarch="mpi" 
elif `echo $arch | grep 'net-' > /dev/null 2>&1`
then     
  charmarch="net"
else      
  charmarch="other"
fi
}            

charmarch=""
CharmArch

if test "$charmarch" = "mpi"
then
  ln $CHARMBIN/../include/mpi.h .   2>/dev/null
fi
$CHARMBIN/charmc -language ampi $@
status=$?

if test "$charmarch" = "mpi"
then
/bin/rm -f mpi.h 2>/dev/null
fi

exit $status
