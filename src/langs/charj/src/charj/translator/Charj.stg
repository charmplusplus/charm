<else>
<if(ext)>/* superclass: <ext> */<endif>
class <ident>: public CBase_<ident> {
    <if(sym.hasSDAG)><ident>_SDAG_CODE<endif>
    <csds; separator="\n">
    <if(needsPupInit)>
    private: void pupInitMethod();
    <endif>
    public: void pup(PUP::er& p);
    <if(!sym.hasDefaultCtor)>
    <if(sym.isMainChare)>
